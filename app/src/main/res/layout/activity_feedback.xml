<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Lottie Animation for background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="wave.json"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="Remember, pain is just a way in which the body communicates imbalances"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Icons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:spacing="16dp">

        <ImageView
            android:id="@+id/restartSessionIcon"
            android:layout_width="0dp"
            android:layout_height="116dp"
            android:layout_weight="1"
            android:contentDescription="Restart Session Icon"
            android:padding="8dp"
            android:src="@drawable/restart_session_icon" />

        <ImageView
            android:id="@+id/doneIcon"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="Done Icon"
            android:padding="8dp"
            android:src="@drawable/done_icon" />

    </LinearLayout>

</FrameLayout>
