<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Lottie Wave Animation -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="wave.json"
        android:scaleType="fitXY" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/instructionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap on the body part where\nyou feel the pain"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <FrameLayout
            android:id="@+id/bodyLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@+id/instructionTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">


        <!-- Main Male Body Image - Front View -->


            <ImageView
                android:id="@+id/bodyImageViewBaseMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_blank_front"
                android:scaleType="fitCenter"
                android:contentDescription="Base image of a body from the front" />

            <ImageView
                android:id="@+id/bodyBackImageViewBaseMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_blank_back"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:contentDescription="Base image of a body from the back" />



    <!-- Front Overlays -->
            <ImageView
                android:id="@+id/headOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_head"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/throatOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_throat"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/chestOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_chest"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/stomachOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_stomach"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/coreOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_core"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/leftarmOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_left_arm"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/rightarmOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_right_arm"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/leftwristOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_left_wrist"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/rightwristOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_right_wrist"
                android:scaleType="fitCenter"
                 android:visibility="invisible" />

            <ImageView
                android:id="@+id/leftlegOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_left_leg"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/rightlegOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_right_leg"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/leftankleOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_left_ankle"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/rightankleOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_right_ankle"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <!-- Back overlays -->

            <ImageView
                android:id="@+id/headbackOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_back_head"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/upperbackOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_upper_back"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/midbackOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_mid_back"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/lowerbackOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_back_low"
                android:scaleType="fitCenter"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/bumOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_bum"
                android:scaleType="fitCenter"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/leftlegbackOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_left_leg_back"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/rightlegbackOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_right_leg_back"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/leftheelOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_left_heel"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/rightheelOverlayMale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/male_right_heel"
                android:scaleType="fitCenter"
                android:visibility="invisible" />

            <!-- Turn Image/Icon -->

        <ImageButton
            android:id="@+id/switchViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/turn_arrow"
            android:background="?android:selectableItemBackground"
            android:contentDescription="@string/switch_view_button_description"
            android:layout_gravity="top|left" />


    <!-- Done Selecting Image/Icon -->
            <ImageView
                android:id="@+id/doneSelectingImageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/progress_icon_1"
                android:visibility="gone"
                android:layout_gravity="bottom|right"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Done selecting"/>

        </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>