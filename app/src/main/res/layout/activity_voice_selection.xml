<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Lottie Animation View for Background -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="60dp">

            <!-- Title Text -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="285dp"
                android:layout_height="93dp"

                android:fontFamily="@font/montserrat_regular"
                android:text="Select a voice that you like to be your guide"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Tap on the buttons\n to play sample"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Anna Voice Button -->

            <!-- Anna Voice Button -->
            <Button
                android:id="@+id/annaButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:contentDescription="Anna voice sample button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text=" Anna"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:drawableLeft="@drawable/resized_small_play_icon"
                android:drawablePadding="16dp"
                android:background="@drawable/button_background_selector"
                android:fontFamily="@font/montserrat_regular"/>

            <!-- Paul Voice Button -->
            <Button
                android:id="@+id/paulButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:contentDescription="Paul voice sample button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text=" Paul"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:drawableLeft="@drawable/resized_small_play_icon"
                android:drawablePadding="16dp"
                android:background="@drawable/button_background_selector"
                android:fontFamily="@font/montserrat_regular"/>

            <!-- Claire Voice Button -->
            <Button
                android:id="@+id/claireButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:contentDescription="Claire voice sample button"
                android:drawableLeft="@drawable/resized_small_play_icon"
                android:drawablePadding="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text=" Claire"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:background="@drawable/button_background_selector"
                android:fontFamily="@font/montserrat_regular"
                android:elevation="4dp"
                android:translationZ="4dp"/>

            <!-- Confirm Choice Button (Initially Hidden) -->
            <Button
                android:id="@+id/confirmChoiceButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:contentDescription="Confirm voice choice button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Choose Voice"
                android:textAllCaps="false"
                android:background="@drawable/button_background_selector"
                android:backgroundTint="@color/button_background_action"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_regular"
                android:elevation="4dp"
                android:translationZ="4dp"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
