<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY" />

    <!-- Lottie Animation View for Background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="lottie_stars.json"
        android:scaleType="fitXY"/>
    <!-- Lottie Animation View for Background -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:paddingTop="100dp">

            <!-- Title Text -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="What is your\n current pain level?"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/montserrat_regular"
                android:elevation="4dp"
                android:translationZ="4dp"/>

            <!-- Minimal Pain Button -->
            <Button
                android:id="@+id/minimalButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/minimal"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/button_background_color"
                android:background="@drawable/button_background_round"
                android:fontFamily="@font/montserrat_regular"
                android:elevation="4dp"
                android:translationZ="4dp"/>


            <Button
                android:id="@+id/lightButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/light"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:backgroundTint="@color/button_background_color"
                android:background="@drawable/button_background_round"
                android:fontFamily="@font/montserrat_regular"
                android:elevation="4dp"
                android:translationZ="4dp"/>
            <Button
                android:id="@+id/moderateButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/moderate"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:backgroundTint="@color/button_background_color"
                android:background="@drawable/button_background_round"
                android:fontFamily="@font/montserrat_regular"
                android:elevation="4dp"
                android:translationZ="4dp"/>
            <Button
                android:id="@+id/intenseButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:contentDescription="Minimal pain button"
                android:drawableLeft="@drawable/intense"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:backgroundTint="@color/button_background_color"
                android:background="@drawable/button_background_round"
                android:fontFamily="@font/montserrat_regular"
                android:elevation="4dp"
                android:translationZ="4dp"/>
            <Button
                android:id="@+id/severeButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:drawableLeft="@drawable/severe"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:backgroundTint="@color/button_background_color"
                android:background="@drawable/button_background_round"
                android:fontFamily="@font/montserrat_regular"
                android:elevation="4dp"
                android:translationZ="4dp"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
