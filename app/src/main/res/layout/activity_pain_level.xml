<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Lottie Animation View for Background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="wave.json"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp">

            <!-- Title Text -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What is your current pain level?"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="32dp" />

            <!-- Minimal Pain Button -->
            <Button
                android:id="@+id/minimalButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#1B4160"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:drawablePadding="8dp" />


            <Button
                android:id="@+id/lightButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#1B4160"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <Button
                android:id="@+id/moderateButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#1B4160"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <Button
                android:id="@+id/intenseButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#1B4160"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <Button
                android:id="@+id/severeButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#1B4160"
                android:contentDescription="Minimal pain button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="I barely notice it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
