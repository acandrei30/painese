<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="GIF Image" />

    <!-- Instructional Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When the session starts your phone will start vibrating at 174herz, the solfeggio pain healing frequency."
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put the phone in the area where you feel pain, listen to the instructions, and relax."
        android:textAlignment="center"
        android:layout_marginBottom="32dp"/>

    <!-- Start Session Button -->
    <Button
        android:id="@+id/start_session_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Session"/>
</LinearLayout>
