<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Lottie Animation View for Background -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_fileName="wave.json"
        android:scaleType="fitXY" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp">

            <!-- Title Text -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="285dp"
                android:layout_height="80dp"
                android:layout_marginBottom="32dp"
                android:text="Select your preferred guiding voice"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Anna Voice Button -->
            <Button
                android:id="@+id/annaButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#1B4160"
                android:contentDescription="Anna voice sample button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text=" Anna"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:drawableLeft="@drawable/small_play_icon"
                android:drawablePadding="16dp" />

            <!-- Paul Voice Button -->
            <Button
                android:id="@+id/paulButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#1B4160"
                android:contentDescription="Paul voice sample button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text=" Paul"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:drawableLeft="@drawable/small_play_icon"
                android:drawablePadding="16dp" />

            <!-- Claire Voice Button -->
            <Button
                android:id="@+id/claireButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#1B4160"
                android:contentDescription="Claire voice sample button"
                android:drawableLeft="@drawable/small_play_icon"
                android:drawablePadding="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text=" Claire"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Confirm Choice Button (Initially Hidden) -->
            <Button
                android:id="@+id/confirmChoiceButton"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:backgroundTint="#EA4A3E"
                android:contentDescription="Confirm voice choice button"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="Choose Voice"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
