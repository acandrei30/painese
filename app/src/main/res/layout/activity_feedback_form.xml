<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/transparent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="294dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/montserrat_regular"
        android:text="Send us an email with what we should improve"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Feedback Input -->
    <EditText
        android:id="@+id/feedbackEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Your feedback..."
        android:inputType="textMultiLine"
        android:minLines="4"
        android:gravity="top"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/montserrat_regular"/>

    <!-- Send Button -->
    <Button
        android:id="@+id/sendButton"
        android:layout_width="140dp"
        android:layout_height="52dp"
        android:layout_below="@+id/feedbackEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_background_round"
        android:backgroundTint="@color/button_background_color"
        android:text="     Send"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:gravity="center"/>

    <!-- Support Email Text at the bottom -->
    <TextView
        android:id="@+id/supportEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="support@paineaseapp.com"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_regular" />

</RelativeLayout>
